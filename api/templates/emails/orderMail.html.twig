            </tr>
            <tr>
            <td colspan="2">Tax Price:</td>
            <td align="right"> {{order.taxPrice | number_format(2, ',',' ')}}</td>
            </tr>
            <tr>
            <td colspan="2">Shipping Price:</td>
            <td align="right"> {{order.shippingPrice | number_format(2, ',',' ')}}</td>
            </tr>
            <tr>
            <td colspan="2"><strong>Total Price:</strong></td>
            <td align="right"><strong> {{order.totalPrice | number_format(2, ',',' ')}}</strong></td>
            </tr>
            <tr>
            <td colspan="2">Payment Method:</td>
            <td align="right">{{order.paymentMethod}}</td>
            </tr>
            </table>
